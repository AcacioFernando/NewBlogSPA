
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Timeline
            <small>Últimas notícas</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Timeline</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">

        <!-- row -->
        <div class="row">
            <div class="col-md-12">
                <!-- The time line -->
                <ul class="timeline">

                    <div ng-repeat="noticia in noticias">

                        <!-- timeline time label -->
                        <li class="time-label">
                            <span class="bg-red">{{noticia.date}} </span>
                        </li>


                        <!-- /.timeline-label -->
                        <!-- timeline item -->
                        <li>
                            <i class="fa fa-envelope bg-blue"></i>
                            <div class="timeline-item">
                                <span class="time"><i class="fa fa-clock-o"></i> {{noticia.date}}</span>
                                <h3 class="timeline-header"><a
                                            href="#">{{noticia.title}}</a> {{noticia.sub_title}}</h3>
                                <div class="timeline-body">
                                    <img src="{{noticia.img}}"
                                         class="img-responsive post6-pic-img" alt="">
                                </div>
                                <div class="timeline-footer">
                                    <a href='/noticia/{{noticia._id}}' class="btn btn-primary btn-xs">Leie mais</a>
                                    <a class="btn btn-danger btn-xs">Delete</a>
                                </div>
                            </div>
                        </li>

                    </div>
                    <!-- END timeline item -->


                </ul>
            </div><!-- /.col -->
        </div><!-- /.row -->


    </section><!-- /.content -->
</div><!-- /.content-wrapper -->




