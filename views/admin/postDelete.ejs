<% layout('layout') -%>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Deletar Notícas
            <small>advanced tables</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Deletar Notícias</a></li>
            <li class="active">Lista de Notícias</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Lista de Notícias</h3>
                    </div><!-- /.box-header -->
                    <div class="box-body">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                            <tr>
                                <th>Deletar</th>
                                <th>Título</th>
                                <th>Subtítulo</th>
                                <th>Data publicação</th>
                                <th>Número comentários</th>
                                <th>Número gostei</th>
                                <th>Número não gostei</th>
                            </tr>
                            </thead>
                            <tbody>

                            <% posts.forEach(function(post){ %>

                            <tr>
                                <form method="post" action="/admin/post/deletar_post" enctype="multipart/form-data">
                                    <td>
                                        <div class="box-footer">
                                            <input type="hidden" class="form-control" value="<%= post._id %>"
                                                   id="inputIDPost" name="inputIDPost">
                                            <button type="submit" class="btn btn-primary">Deletar</button>
                                        </div>
                                    </td>
                                </form>
                                <td> <%= post.title %> </td>
                                <td> <%= post.sub_title %> </td>
                                <td> <%= post.date %> </td>
                                <td> <%= post.comments.length %> </td>
                                <td> <%= post.gostei %> </td>
                                <td> <%= post.nao_gostei %> </td>
                            </tr>

                            <% }) %>

                            </tbody>
                            <tfoot>
                            <tr>
                                <th>Rendering engine</th>
                                <th>Browser</th>
                                <th>Platform(s)</th>
                                <th>Engine version</th>
                                <th>CSS grade</th>
                                <th>A</th>
                                <th>A</th>

                            </tr>
                            </tfoot>
                        </table>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->

            </div><!-- /.col -->
        </div><!-- /.row -->
    </section><!-- /.content -->
</div><!-- /.content-wrapper -->