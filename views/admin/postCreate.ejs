<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Nova notícia
            <small>Preview</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Forms</a></li>
            <li class="active">Nova notícia</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Cadastrar</h3>
                    </div><!-- /.box-header -->
                    <!-- form start -->

                    <div class="box-body">
                        <form class="form-group" name="myForm" ng-controller="MyCtrl">

                            <div class="form-group">
                                <label for="labelTitulo">Título</label>
                                <input ng-model="noticia.title" type="text" class="form-control" id="inputTitulo"
                                       name="inputTitulo"
                                       placeholder="Entre com o título da notícia">
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="labelSubTitulo">Subtítulo</label>
                                        <input ng-model="noticia.sub_title" type="text" class="form-control"
                                               id="inputSubTitulo"
                                               name="inputSubTitulo"
                                               placeholder="Entre com o subtítulo da notícia">
                                    </div>
                                </div>
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label>Categoria</label>
                                        <select class="form-control select2" ng-model="noticia.category"
                                                ng-options="categoria.nome_categoria for categoria in categorias">
                                            <option value="">Selecione uma categoria</option>
                                        </select>

                                    </div><!-- /.form-group -->

                                </div>

                                <div class="col-md-1">
                                    <label> &nbsp; </label>
                                    <br/>
                                    <button type="button" data-toggle="modal" data-target=".modal"
                                            class="btn btn-info btn-sm"><i class="fa fa-plus-circle"></i></button>
                                </div>


                            </div>

                            <!-- textarea -->
                            <div class="form-group">
                                <textarea id="inputPost" name="inputPost" class="form-control" rows="3"
                                          style="display: none;"></textarea>
                            </div>

                            <!-- Caixa de edição -->
                            <div class="CaixaEdicao">
                                <div class="box box-info">
                                    <div class="box-header">
                                        <h3 class="box-title">Conteúdo </h3>
                                        <!-- tools box -->
                                        <div class="pull-right box-tools">
                                            <button class="btn btn-info btn-sm" data-widget="collapse"
                                                    data-toggle="tooltip"
                                                    title="Collapse"><i class="fa fa-minus"></i></button>
                                            <button class="btn btn-info btn-sm" data-widget="remove"
                                                    data-toggle="tooltip"
                                                    title="Remove"><i class="fa fa-times"></i></button>
                                        </div><!-- /. tools -->
                                    </div><!-- /.box-header -->
                                    <div class="box-body pad">

                                        {{testForm.body.$pristine}}
                                    <textarea name="body" ckeditor="editorOptions"
                                              ng-model="noticia.content"></textarea>

                                    </div>
                                </div><!-- /.box -->
                            </div>

                            
                            <fieldset>
                                <div class="input-group">
                                    <label for="exampleInputFile">Imagem</label>

                                    <input type="file" ngf-select ng-model="picFile" name="file"
                                           accept="image/*" ngf-max-size="2MB" required
                                           ngf-model-invalid="errorFiles">
                                    <div class="row">
                                        <div class="col-md-12 ">
                                            <img ng-show="myForm.file.$valid" ngf-thumbnail="picFile"
                                                 class="img-responsive">
                                        </div>
                                    </div>
                                    <button ng-click="picFile = null" ng-show="picFile">Remove</button>
                                    <br>
                                  <span class="progress" ng-show="picFile.progress >= 0">
                                    <div style="width:{{picFile.progress}}%"
                                         ng-bind="picFile.progress + '%'"></div>
                                  </span>
                                    <span ng-show="picFile.result">Upload Successful</span>
                                    <span class="err" ng-show="errorMsg">{{errorMsg}}</span>
                                </div>
                            </fieldset>
                            <br>


                            <div class="box-footer">
                                <button type="button" class="btn btn-primary" ng-click="uploadPic(picFile, noticia)">Submit
                                </button>
                            </div>
                        </form>
                    </div><!-- /.box-body -->

                </div><!-- /.box -->
            </div><!--/.col -->
        </div>   <!-- /.row -->

        <div class="modal fade">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                        <h4 class="modal-title">Nova categoria </h4>
                    </div>
                    <form method="post" action="/admin/post/categoria">
                        <div class="modal-body">
                            <input type="text" class="form-control" id="inputCategoria" name="inputCategoria"
                                   placeholder="Entre com a nova categoria... ">
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
                            <button type="submit" class="btn btn-primary">Salvar categoria</button>
                        </div>
                    </form>
                </div><!-- /.modal-content -->
            </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->

    </section><!-- /.content -->
</div><!-- /.content-wrapper -->


